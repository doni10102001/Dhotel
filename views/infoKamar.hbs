{{!-- Produk --}}
<div class="container-fluid">
	<div class="card">
		<div class="card-header">
			<h5 class="text-center">
				<i class="fa fa-bed fa-fw"></i>Kamar {{item.nomor}}
			</h5>
		</div>
		<div class="card-body">
			<form>
                <div class="row justify-content-md-center">
                    <img src="https://i0.wp.com/penginapan.net/wp-content/uploads/Kamar-Hotel-Executive.jpg?resize=460%2C300&ssl=1" class="img-thumbnail">
                </div>
                <div class="form-group">
                    <label for="nomor">Nomor :</label>
                    <input type="text" name="nomor" id="nomor" class="form-control" value="{{ item.nomor }}" readonly>
                </div>
                <div class="form-group">
                    <label for="lantai">Lantai :</label>
                    <input type="text" name="lantai" id="lantai" class="form-control" value="{{ item.lantai }}" readonly>
                </div>
                <div class="form-group">
                    <label for="fasilitas">Fasilitas :</label>
                    <input type="text" name="fasilitas" id="fasilitas" class="form-control" value="{{ item.fasilitas }}" readonly>
                </div>
                <div class="form-group">
                    <label for="harga_permalam">Harga Permalam :</label>
                    <input type="text" name="harga_permalam" id="harga_permalam" class="form-control" value="Rp. {{ item.harga_permalam }}" readonly>
                </div>
            </form>
            <div class="float-right">  
                <a href="/" class="btn btn-danger">Kembali</a>
                <a href="" class="btn btn-warning" title="Sewa Kamar"><i class="fa fa-shopping-cart fa-fw"></i></a>
            </div>
		</div>
	</div>
</div>
